.about-header {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  position: relative;
}

.about-header h1 {
  text-align: center;
}

.about-parallax-section {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

#about-section1 {
  background: url('https://res.cloudinary.com/dvzsvgucq/image/upload/v1682877945/regard-1_k595n9.webp') no-repeat center 5% fixed;
  background-size: cover;
}

#about-section2 {
  background: url('https://res.cloudinary.com/dvzsvgucq/image/upload/v1682877943/lille-1_uunkfn.webp') no-repeat center 30% fixed;
  background-size: cover;
}

#about-section3 {
  background: url('https://res.cloudinary.com/dvzsvgucq/image/upload/v1684155348/golf_1_lblzwg.jpg') no-repeat center center fixed;
  background-size: cover;
}

#about-section4 {
  background: url('https://res.cloudinary.com/dvzsvgucq/image/upload/v1682877944/tz-autour-du-v195169lo-1-compressed_zszysx.webp') no-repeat center 25% fixed;
  background-size: cover;
}

#about-section5 {
  background: url('https://res.cloudinary.com/dvzsvgucq/image/upload/v1679050856/DSC02904_arkwah.jpg') no-repeat center 15% fixed;
  background-size: cover;
}

.about-content .about-parallax-section h2 {
  font-size: 36px;
  color: rgb(0, 0, 0);
  text-align: center;
  position: absolute;
  border-radius: 5px;
  background-color: rgba(255, 255, 255, 0.45);
  backdrop-filter: blur(10px);
  z-index: 1;
  padding: 0.5rem 1rem;
}

.about-parallax-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: -1;
}

.about-detail-section {
  display: flex;
  height: 100vh;
  overflow: hidden;
  justify-content: center;
  align-items: center;
}

.text-container {
  width: 30%;
  padding-left: 50px;
  padding-right: 1rem;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
  background-color: rgba(0, 0, 0, 1);
  z-index: 2;
}

.image-container {
  width: 70%;
  height: 100%;
  position: relative;
  z-index: 1;
}

.image-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.text-xp {
  width: 60%;
  padding-left: 50px;
  color: white;
  padding-right: 1rem;
  display: flex;
  flex-direction: column;
  position: relative;
  background-color: rgba(0, 0, 0, 1);
  z-index: 2;
}

.image-xp {
  width: 40%;
  height: 100%;
  position: relative;
  z-index: 1;
}

.image-xp img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0) 25%);
  z-index: 2;
}

.image-xp::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0) 25%);
  z-index: 2;
}

#video-about {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  object-fit: cover;
}

.about-content .hello-button {
  cursor: pointer;
}

.intro-button a {
  text-decoration: none;
  color: black;
}

/*Logos m√©dias*/

.about-media-logos {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20px;
}

.about-media-logos img {
  width: auto;
  height: 40px;
  margin: 5px;
}

#bbc, #fr2 {
  background-color: white;
  padding: 3px;
}

/* Pour les tablettes */
@media screen and (max-width: 768px) {
  .about-detail-section {
    flex-direction: column;
    height: auto;
  }

  .text-container, .text-xp {
    width: 100%;
    padding: 0 1rem;
    text-align: justify;
  }

  .text-container p, .text-xp p {
    padding: 0 1rem;
  }

  .text-xp h2 {
    text-align: center;
  }

  .image-container, .image-xp {
    width: 100%;
    height: 50vh;
  }

  .image-xp {
    height: 100%;
  }
}

/* Pour les mobiles */
@media screen and (max-width: 480px) {

  #about-section1 {
    background: url("https://res.cloudinary.com/dvzsvgucq/image/upload/v1682276004/HervePortraitsStudio20211006BD-1_cv8rq4.jpg") no-repeat center 5% fixed;
    background-size: cover;
    position: relative;
  }

  #about-section1::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    z-index: 1;
  }

  #about-section3 {
    background: url('https://res.cloudinary.com/dvzsvgucq/image/upload/v1680280371/DSC09561_i1degt.jpg') no-repeat 40% center fixed;
    background-size: cover;
  }

  #about-section5 {
    background: url('https://res.cloudinary.com/dvzsvgucq/image/upload/v1679050856/DSC02904_arkwah.jpg') no-repeat 63% center fixed;
    background-size: cover;
  }

  .text-container, .text-xp {
    text-align: justify;
  }


  .about-content .about-parallax-section h2 {
    font-size: 24px;
  }

  .about-detail-section {
    height: auto;
    margin: 0 1.3rem;
  }

  .image-container, .image-xp {
    height: 40vh;
  }

  .about-media-logos img {
    height: 30px;
  }
}
