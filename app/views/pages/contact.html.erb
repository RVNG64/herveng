<div class="contact-all-container">
  <div class="contact-container">
    <div class="form-container">
      <h2>Contactez-moi</h2>
      <form class="contact-form" action="/contact" method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
          <input type="text" id="name" name="name" required>
          <label for="name" class="label-form">Quel est votre nom ?</label>
        </div>
        <div class="form-group">
          <input type="email" id="email" name="email" required>
          <label for="email" class="label-form">Quel est votre email ?</label>
        </div>
        <div class="form-group">
          <input type="text" id="subject" name="subject" required>
          <label for="subject" class="label-form">Sujet</label>
        </div>
        <div class="form-group">
          <textarea id="message" rows="5" name="content" required></textarea>
          <label for="message" class="label-form">Votre message</label>
        </div>
        <div class="form-group">
          <button type="submit" class="submit-button">Envoyer</button>
        </div>
      </form>
    </div>
    <div class="contact-details">
      <h2>Coordonnées</h2>
      <p>Email: <a href="mailto:contact@rvng.com">contact@rvng.com</a></p>
      <p>Téléphone: <a href="tel:+33665511993">+33 6 65 51 19 93</a></p>
    </div>
  </div>
</div>
