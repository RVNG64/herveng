<div class="contact-all-container">
  <div class="contact-container">
    <div class="form-container">
      <h2>Contactez-moi</h2>
      <% if flash[:notice] %>
        <div class="flash-message success"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div class="flash-message error"><%= flash[:alert] %></div>
      <% end %>
      <%= form_with model: @message, url: messages_path, method: :post, local: true, class: "contact-form" do |f| %>
<%= f.hidden_field :authenticity_token, value: form_authenticity_token %>
<div class="form-group">
  <%= f.text_field :name, id: "name", required: true %>
  <label for="name" class="label-form">Quel est votre nom ?</label>
</div>
<div class="form-group">
  <%= f.email_field :email, id: "email", required: true %>
  <label for="email" class="label-form">Quel est votre email ?</label>
</div>
<div class="form-group">
  <%= f.text_field :subject, id: "subject", required: true %>
  <label for="subject" class="label-form">Sujet</label>
</div>
<div class="form-group">
  <%= f.text_area :content, id: "message", rows: 5, required: true %>
  <label for="message" class="label-form">Votre message</label>
</div>
<div class="form-group">
  <%= f.submit "Envoyer", class: "submit-button" %>
</div>
<% end %>
      </form>
    </div>
    <div class="contact-details">
      <h2>Coordonnées</h2>
      <p>Email: <a href="mailto:contact@rvng.com">contact@rvng.com</a></p>
      <p>Téléphone: <a href="tel:+33665511993">+33 6 65 51 19 93</a></p>
    </div>
  </div>
</div>
