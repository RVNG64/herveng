<div class="new-post-container">
  <h1 class="new-post-title">Nouvel article</h1>

  <%= form_with(model: @post, html: { class: 'new-post-form' }) do |form| %>
    <div class="new-post-field">
      <%= form.label :cover_image, "Image de couverture", class: "new-post-label" %>
      <%= form.file_field :cover_image, class: 'new-post-input' %>
    </div>

    <div class="new-post-field">
      <%= form.label :title, "Titre", class: "new-post-label" %>
      <%= form.text_field :title, class: 'new-post-input' %>
    </div>

    <div class="new-post-field">
      <%= form.label :content, "Contenu", class: "new-post-label" %>
      <div class="editor"></div>
      <%= form.hidden_field :content, id: "post_content" %>
    </div>

    <div class="new-post-actions">
      <%= form.submit "CrÃ©er l'article", class: 'new-post-btn' %>
    </div>
  <% end %>
</div>
