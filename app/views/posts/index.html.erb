<div class="index-container">
  <h1 class="index-title">Blog</h1>

  <div class="posts">
    <% @posts.each do |post| %>
      <div class="post">
        <h2 class="post-title"><%= link_to post.title, post_path(post) %></h2>
        <p class="post-content"><%= post.content.to_plain_text.truncate(100) %></p>
      </div>
    <% end %>
  </div>
</div>
