<div class="index-container">
  <h1 class="index-title">L'Odyssée</h1>
  <h3 class="index-subtitle">Pérégrinations et notes d'explorations</h3>

  <div class="posts">
    <% @posts.each do |post| %>
      <div class="post">
        <%= link_to post_path(post.slug) do %>
          <% if post.cover_image.attached? %>
            <%= image_tag post.cover_image, alt: post.title, class: "post-cover-image" %>
          <% end %>
          <div class="post-text">
            <h2 class="post-title"><%= post.title %></h2>
            <p class="post-content"><%= post.content.to_plain_text.truncate(100) %>
              <span class="read-more">Lire la suite</span>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
